# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                               @controllers.Assets.at(path="/public", file)

# Home page, sign up, sign in
GET 		/  											                        @controllers.Assets.at(path="/public", file="html/index/index.html")
GET 		/signup  								                        @controllers.Assets.at(path="/public", file="html/signup/signup.html")
POST    /signup                                         @controllers.AuthController.signup

#items
GET         /item/details/:id                           @controllers.ItemController.details(id: String)
GET         /item/all                                   @controllers.ItemController.all
GET         /item/all/:pageNum                          @controllers.ItemController.allForPage(pageNum: Int)

#filters
GET         /item/filters                               @controllers.ItemFilterController.filters
GET         /item/filters/by                            @controllers.ItemFilterController.itemsByFilterAsJson

#similarity
GET 		/item/similar/:id 							                @controllers.ItemSimilarityController.getSimilarTo(id: String)

#session
GET         /user                                       @controllers.AuthController.loginForm
GET         /user/register                              @controllers.AuthController.registrationForm
POST        /user/login                                 @controllers.AuthController.login
POST        /user/register                              @controllers.AuthController.signup
GET         /user/logout                                @controllers.AuthController.logout

#categoies
GET         /categories                                 @controllers.ItemCategoryController.categories
PUT         /categories/modify/:oldName/:newName        @controllers.ItemCategoryController.updateCategory(oldName: String, newName: String)

#subcategories
GET         /subcategories                              @controllers.ItemSubCategoryController.subcategories

#admin
GET         /general/activity                           @controllers.GeneralController.userActivity
